<head>
  <title>Mon Search</title>
  <meta charset="utf-8">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    .dropdown-menu {
      min-width: 20px !important;
    }
    #profile {
      position: relative;
      right: 50px;
    }
  </style>
</head>

<nav class="navbar navbar-expand-sm bg-dark">
  <div class="container-fluid">
    <h2 class="col" style="color: white; text-align: center">Pokemon Search</h2>

    <div class="btn-group" id="profile">
      <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" style="background: black"><%= name %></button>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="/">Home</a></li>
          <li><a class="dropdown-item" href="/users/profile">Profile</a></li>
          <li>
          <form action="/logout?_method=DELETE" method="POST">
            <button type="submit" class="dropdown-item">Log Out</button>
          </form>
          </li>
        </ul>
    </div>

  </div>
</nav>
<div class="container p-5 my-5 border">
  <form id="form" action="/" method="POST">
    <label for="poke">Search a Pokemon</label>
    <input id="poke" type="text" name="poke" placeholder="Search a Pokemon">
    <button type="submit">Submit</button>
  </form>
</div>
