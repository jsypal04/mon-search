<head>
  <title>Mon Search</title>
  <meta charset="utf-8">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    .dropdown-menu {
      min-width: 20px !important;
    }
    #profile {
      position: relative;
      right: 50px;
    }
  </style>
</head>

<nav class="navbar navbar-expand-sm bg-dark">
  <div class="container-fluid">
    <h2 class="col" style="text-align: center"><a href="/" style="color: white; text-decoration: none">Pokemon Search</a></h2>

    <div class="btn-group" id="profile">
      <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" style="background: black"><%= currentName %></button>
        <ul class="dropdown-menu">
          <li><a class="dropdown-item" href="/">Home</a></li>
          <li><a class="dropdown-item" href="/users/profile">Profile</a></li>
          <li>
          <form action="/logout?_method=DELETE" method="POST">
            <button type="submit" class="dropdown-item">Log Out</button>
          </form>
          </li>
        </ul>
    </div>

  </div>
</nav>

<div class="container p-5 my-5 border" style="text-align: center">
  <div class="border" style="width: 400px; margin: auto">
    <br>
    <img src="/Default_pfp.png" width="80px" alt="Empty Profile Picture">
    <br><br>
    <form action="/users/edit-profile" method="POST">
      <label>Name</label>
      <br>
      <input type="text" name="name" placeholder=<%= currentName %>>
      <br>
      <label>Email</label>
      <br>
      <input type="email" name="email" placeholder=<%= currentEmail %>>
      <br>
      <label>Password</label>
      <br>
      <input type="password" name=password>
      <br><br>
      <button type="submit">Submit</button>
    </form>
    <a href="/users/profile">back</a>
  <div>
</div>
